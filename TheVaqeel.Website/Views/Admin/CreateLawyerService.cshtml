
@{
    ViewBag.Title = "CreateLawyerService";
    Layout = null;
}


@using (Html.BeginForm("CreateLawyerService", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateLawyerServiceForm" }))
{
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="InputTitle">Title</label>
                    <input type="text" class="form-control" id="InputTitle" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="InputPassword">Description</label>
                    <input type="text" class="form-control" id="InputPassword" name="Description" required>
                </div>
                <div class="form-group">
                    <label for="InputFile">Image</label>
                    <input type="file" class="form-control" id="InputFile" name="file" required>
                </div>
            </div>
        </div>

    </div>
}
<script>
        $(document).ready(function () {
            $("#SaveLawyerServiceBtn").click(function () {
                var formData = new FormData();
                formData.append('file', $("#InputFile").get(0).files[0]);
                formData.append('Title', $("#InputTitle").val());
                formData.append('Description', $("#InputPassword").val());
            $.ajax({
                url: "@Url.Action("CreateLawyerService","Admin")",
                method: "post",
                data: formData,
                contentType: false,
                processData: false,
            }).done(function (response) {
                $("#exampleModal").modal("toggle");
                $("#LawyerServiceList").html(response);
                swal("Good Job!", "Data Added Successfully", "success");
            });
         });
        });
</script>

