
@{
    Layout = null;
}

@using (Html.BeginForm("CreateFaqs", "Admin", FormMethod.Post, new { id = "CreateFaqsForm" }))
{
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="InputTitle">Question</label>
                    <input type="text" class="form-control" id="InputTitle" name="Question" required>
                </div>
                <div class="form-group">
                    <label for="InputPassword">Answer</label>
                    <input type="text" class="form-control" id="InputPassword" name="Answer" required>
                </div>
            </div>
        </div>

    </div>
}
<script>
        $(document).ready(function () {
            $("#SaveSliderBtn").click(function () {                
            $.ajax({
                url: "@Url.Action("CreateFaqs","Admin")",
                method: "post",
                data: $("#CreateFaqsForm").serialize()
            }).done(function (response) {
                $("#exampleModal").modal("toggle");
                $("#FaqsContent").html(response);
                swal("Good Job!", "Data Added Successfully", "success");
            });
         });
        });
</script>