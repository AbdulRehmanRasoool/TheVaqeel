@model TheVaqeel.Website.Models.Faqs
@{
    Layout = null;
}

@using (Html.BeginForm("EditFaqs", "Admin", FormMethod.Post, new { id = "EditFaqsForm" }))
{
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="InputTitle">Question</label>
                    <input type="text" class="form-control" id="InputTitle" name="Question" value="@Model.Question">
                </div>
                <div class="form-group">
                    <label for="InputPassword">Answer</label>
                    <input type="text" class="form-control" id="InputPassword" name="Answer" value="@Model.Answer">
                </div>
               
                <input type="hidden" id="HiddenId" value="@Model.Id" name="Id" />
            </div>
        </div>

    </div>
}

<script>
        $(document).ready(function () {
            $("#UpdateSliderBtn").click(function () {
            $.ajax({
                url: "@Url.Action("EditFaqs", "Admin")",
                method: "Post",
                data: $("#EditFaqsForm").serialize()
            }).done(function (response) {
                $("#exampleModalEdit").modal("toggle");
                $("#FaqsContent").html(response);
                swal("Good Job!", "Data Updated Successfully", "success");               
                
            });
         });
        });
</script>