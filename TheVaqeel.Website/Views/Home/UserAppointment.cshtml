@model TheVaqeel.Website.ViewModel.HomeViewModel
@{
    ViewBag.Title = "UserAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}


<section class="hero-area">
    <div class="breadcrumbs-area bg_cover bg-with-overlay"
         style="background-image: url(/Content/img/bg/page-title.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <h1 class="title">User Appointment</h1>
                        <ul class="breadcrumbs-link">
                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                            <li class="">User Appointment</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div id="FaqsContent" class="pt-3 pb-3">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="FAQs" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>S.N.O</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var faq in Model.Appointments)
                                    {

                                        <tr>
                                            <td>@i</td>
                                            <td>@faq.Name</td>
                                            <td>@faq.Date.ToShortDateString()</td>
                                            <td>@faq.TimeSlot.StartTime - @faq.TimeSlot.EndTime</td>
                                            <td>
                                                @if (faq.Status == 0)
                                                {
                                                    <span class="badge bg-info text-white">Pending</span>
                                                }
                                                else if (faq.Status == 1)
                                                {
                                                    <span class="badge bg-primary text-white">Approved</span>
                                                }
                                                else if (faq.Status == 2)
                                                {
                                                    <span class="badge bg-success text-white">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-white">Cancelled</span>
                                                }
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#FAQs").dataTable({
                "language": {
                    "emptyTable": "You have no Appointments"
                }
            });
        });

    </script>
}

