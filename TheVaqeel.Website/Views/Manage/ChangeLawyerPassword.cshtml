@model TheVaqeel.Website.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LawyerLayout.cshtml";
}

<section class="pt-3">
    <div class="container">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Change Password</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("ChangeLawyerPassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ChangePasswordViewModel.OldPassword)
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.OldPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ChangePasswordViewModel.NewPassword)
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.NewPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ChangePasswordViewModel.ConfirmPassword)
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <input type="submit" value="Change password" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}